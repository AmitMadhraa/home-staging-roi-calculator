---
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "Home Staging ROI Calculator | Calculate Your Return on Investment",
	description = "Free calculator to estimate your home staging ROI. Calculate potential property value increase, time savings, and return on investment for home staging services."
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />

		<!-- Location-specific meta tags -->
		<meta name="geo.region" content="US" />
		<meta name="geo.position" content="39.8283;-98.5795" />
		<meta name="ICBM" content="39.8283, -98.5795" />

		<!-- Keywords -->
		<meta name="keywords" content="home staging calculator, home staging ROI, property staging calculator, home staging cost calculator, real estate staging calculator, home staging investment calculator, property staging ROI" />

		<!-- Slot for additional head content -->
		<slot name="head" />
	</head>
	<body class="bg-gray-50">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
