---
import Calculator from '../../components/Calculator.astro';
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    {params: {location: 'new-york'}},
    {params: {location: 'los-angeles'}},
    {params: {location: 'chicago'}},
    {params: {location: 'houston'}},
    {params: {location: 'miami'}},
    // Add more locations as needed
  ];
}

const { location } = Astro.params;
const formattedLocation = location.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');

const title = `Home Staging ROI Calculator for ${formattedLocation} | Calculate Your Return on Investment`;
const description = `Free calculator to estimate your home staging ROI in ${formattedLocation}. Calculate potential property value increase, time savings, and return on investment for home staging services in ${formattedLocation}.`;
---

<Layout title={title} description={description} location={formattedLocation}>
    <main class="min-h-screen bg-gray-50 py-12">
        <div class="max-w-4xl mx-auto px-4">
            <!-- Location-specific content -->
            <section class="mb-12 bg-white p-6 rounded-lg shadow-lg">
                <h1 class="text-3xl font-bold text-blue-800 mb-4">Home Staging ROI Calculator for {formattedLocation}</h1>
                <p class="text-gray-700 mb-4">
                    Calculate your potential return on investment for home staging in {formattedLocation}. 
                    Our calculator takes into account local market conditions, seasonal factors, and property-specific details 
                    to provide you with accurate estimates for your area.
                </p>
            </section>

            <Calculator />

            <!-- Location-specific tips -->
            <section class="mt-12 bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-2xl font-bold text-blue-800 mb-4">Home Staging Tips for {formattedLocation}</h2>
                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="font-semibold text-lg mb-2">Local Market Insights</h3>
                        <ul class="list-disc list-inside space-y-2 text-gray-700">
                            <li>Understanding {formattedLocation} buyer preferences</li>
                            <li>Seasonal staging considerations</li>
                            <li>Local design trends</li>
                            <li>Market-specific pricing strategies</li>
                        </ul>
                    </div>
                    <div>
                        <h3 class="font-semibold text-lg mb-2">Regional Considerations</h3>
                        <ul class="list-disc list-inside space-y-2 text-gray-700">
                            <li>Climate-appropriate staging</li>
                            <li>Local architectural styles</li>
                            <li>Neighborhood-specific appeal</li>
                            <li>Regional buyer demographics</li>
                        </ul>
                    </div>
                </div>
            </section>
        </div>
    </main>
</Layout>
